<!--    </style>-->

    <style name="dialog_title_style" parent="Theme.MyApp">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>
    <style name="TintTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="dialogCornerRadius">20dp</item>
        <item name="android:colorBackground">@color/primaryDarkColor</item>
        <item name="titleTextColor">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="textColorAlertDialogListItem">@color/secondaryColor</item>
        <item name="android:textColorPrimary">@color/secondaryColor</item>
        <item name="collapsedTitleGravity">center</item>
        <item name="expandedTitleGravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>


    </style>
    <style name="AppBar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textColorSecondary">@color/primaryColor</item>


    </style>
</resources>

